<%= form_for(@event) do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: @event} %>

  <div class="form-group">
    <%= f.label 'Название мероприятия'%>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.file_field :image %>
  </div>

  <div class="form-select form-select-lg mb-3">
    <%= f.label "Тип события" %>
    <%= f.select :event_type, ["Спортивная игра", "Настольная игра", "Одолжите...", "Нашли/Потеряли...", "Зацените мемчик", "Другое..."] %>
  </div>

  <div class="form-group">
    <%= f.label "Дата и время начала" %>
    <p><%= f.datetime_select :datetime, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.label 'Краткое описание' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %>
    или <%= link_to 'вернуться', :back %>
  </div>
<% end %>
